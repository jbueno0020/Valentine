<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Will You Be My Valentine?</title>
  <style>
    /* Basic styling for a sweet and playful look */
    body {
      background: linear-gradient(135deg, #ff9a9e, #fad0c4);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    h1 {
      font-size: 3em;
      color: #fff;
      text-shadow: 2px 2px #ff6f91;
      margin-bottom: 40px;
    }
    .btn {
      background-color: #ff6f91;
      border: none;
      color: white;
      padding: 15px 25px;
      font-size: 1.2em;
      border-radius: 8px;
      margin: 10px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .btn:hover {
      background-color: #ff85a1;
    }
    #message {
      margin-top: 30px;
      font-size: 1.5em;
      color: #fff;
      text-shadow: 1px 1px #ff6f91;
    }
    /* Ensure the No button can move around */
    #noBtn {
      position: relative;
    }
  </style>
</head>
<body>
  <h1>Will You Be My Valentine?</h1>
  <button id="yesBtn" class="btn">Yes!</button>
  <button id="noBtn" class="btn">No</button>
  <div id="message"></div>

  <script>
    // Get references to the elements
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const messageDiv = document.getElementById('message');

    // When the "Yes" button is clicked, display a positive message
    yesBtn.addEventListener('click', function() {
      messageDiv.textContent = "Yay! I knew you'd say yes!";
    });

    // Optional: If the "No" button is clicked, show a playful message
    noBtn.addEventListener('click', function() {
      messageDiv.textContent = "Really? Are you sure?";
    });

    // Make the "No" button run away when hovered over
    noBtn.addEventListener('mouseover', function() {
      // Calculate a random position within the window boundaries
      const maxX = window.innerWidth - noBtn.offsetWidth;
      const maxY = window.innerHeight - noBtn.offsetHeight;
      const randomX = Math.random() * maxX;
      const randomY = Math.random() * maxY;
      
      // Change the button's position to the new random coordinates
      noBtn.style.position = 'absolute';
      noBtn.style.left = randomX + 'px';
      noBtn.style.top = randomY + 'px';
    });
  </script>
</body>
</html>
